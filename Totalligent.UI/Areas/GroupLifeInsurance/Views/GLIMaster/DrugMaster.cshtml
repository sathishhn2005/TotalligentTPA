@model Totalligent.BusinessEntities.DrugMaster
@{
    ViewBag.Title = "DrugMaster";
    Layout = "~/Areas/GroupLifeInsurance/Views/Shared/_Layout.cshtml";
}



<div class="p-t-30">
    <div class="box">
        <div class="box-header with-border">
            <ul class="nav nav-pills justify-content-center mb-0">
                <li class=" nav-item flex-fill text-center"> <a href="#navpills2-1" class="nav-link active" data-toggle="tab" aria-expanded="false"><i class="fa fa-building-o mr-3"></i>Drug Master</a> </li>
                <li class="nav-item flex-fill text-center"> <a href="#navpills2-2" class="nav-link" data-toggle="tab" aria-expanded="false"><i class="fa fa-search mr-3"></i>Search Drug Master</a> </li>
            </ul>
        </div>
        <div class="box-body">
            <div class="tab-content">
                <div id="navpills2-1" class="tab-pane active">
                    <form id="formProducer">
                        <div class="row">
                            <div class="col-12 col-md-6 mx-auto">
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 class="col-sm-12 font-weight-bold text-center">Drug Master's Details</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-5">
                                            @Html.LabelFor(model => model.DrugCode, htmlAttributes: new { @class = "col-form-label text-md-right w-full" })
                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.DrugCode, new { @class = "form-control w-full", @placeholder = "Enter Drug Master Code" })
                                            @Html.ValidationMessageFor(model => model.DrugCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-5">
                                            @Html.LabelFor(model => model.DrugName, htmlAttributes: new { @class = "col-form-label text-md-right w-full" })
                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(model => model.DrugName, new { @class = "form-control w-full", @placeholder = "Enter Drug Master Name" })
                                            @Html.ValidationMessageFor(model => model.DrugName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <input type="submit" id="btnDrugMas" value="Create" class="btn btn-primary m-20" />
                                    <button class="btn btn-primary-login m-20" type="button" data-toggle="modal" data-target="#uploadBulkDrugMaster">
                                        <i class="mdi mdi-cloud-upload"></i> Bulk Upload Drug Master
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="navpills2-2" class="tab-pane ">
                    <div class="card no-shadow">
                        <div class="card-body form-horizontal">
                            <div class="row ">
                                <div class="col-md-4">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Master Name" })
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Master Code" })
                                </div>
                                <div class="col-md-4">
                                    <button type="button" class="btn btn-block btn-primary"><i class="fa fa-search mr-3"></i>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5>Search Results:</h5>
                    <br />
                    <div class="table-responsive">
                        <table id="tblDrugMaster" class="table table-hover">
                            <tr>
                                <th>DrugName</th>
                                <th>DrugCode</th>
                                <th class="text-center">Actions</th>
                            </tr>
                           
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <div class="box-footer text-right">
            <button id="btnDrugMas" class="btn btn-rounded btn-primary">Submit</button>
            <button class="btn btn-rounded btn-secondary">Cancel</button>
        </div>
    </div>
</div>

