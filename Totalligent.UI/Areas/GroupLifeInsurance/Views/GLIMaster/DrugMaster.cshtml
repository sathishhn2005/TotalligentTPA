
@model Totalligent.UI.Models.DrugMasterModel
@using Totalligent.BusinessEntities;

@{
    ViewBag.Title = "DrugMaster";
    Layout = "~/Areas/GroupLifeInsurance/Views/Shared/_Layout.cshtml";
}



<div class="p-t-30">
    <div class="box">
        <div class="box-header with-border">
            <ul class="nav nav-pills justify-content-center mb-0">
                <li class=" nav-item flex-fill text-center"> <a href="#navpills2-1" class="nav-link active" data-toggle="tab" aria-expanded="false"><i class="fa fa-building-o mr-3"></i>Drug Master</a> </li>
                <li class="nav-item flex-fill text-center"> <a href="#navpills2-2" class="nav-link" data-toggle="tab" aria-expanded="false"><i class="fa fa-search mr-3"></i>Search Drug Master</a> </li>
            </ul>
        </div>
        <div class="box-body">
            <div class="tab-content">
                <div id="navpills2-1" class="tab-pane active">
                    <form id="formDrugMaster">
                        <h4 class="text-center text-success">@TempData["Alertmsg"]</h4>
                        @{ TempData.Keep("DMFolderName");}
                        <div class="row">
                            <div class="col-12 col-md-6 mx-auto">
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 class="col-sm-12 font-weight-bold text-center">Drug Master's Details</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label class="col-form-label text-md-right w-full">Drug Name</label>

                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBox("DrugName", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Name" })

                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label class="col-form-label text-md-right w-full">Drug Code</label>
                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBox("DrugCode", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Code" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-12 text-center">

                                    <div class="box-footer text-right">
                                        <button id="btnDrugMas" type="submit" value="Create" class="btn btn-rounded btn-primary">Submit</button>
                                        <button class="btn btn-rounded btn-secondary">Cancel</button>
                                    </div>
                                    <button class="btn btn-primary-login m-20" type="button" data-toggle="modal" data-target="#uploadBulkDrugMaster">
                                        <i class="mdi mdi-cloud-upload"></i> Bulk Upload Drug Master
                                    </button>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hdnDrugId" value="0">
                    </form>
                </div>
                <div id="navpills2-2" class="tab-pane ">
                    <div class="card no-shadow">
                        <div class="card-body form-horizontal">
                            <div class="row ">
                                <div class="col-md-4">
                                    @Html.TextBox("txtDrugName", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Master Name" })
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("txtDrugCode", "", new { @class = "form-control w-full", @placeholder = "Enter Drug Master Code" })
                                </div>
                                <div class="col-md-4">
                                    <input type="hidden" id="DMFolderName" value='@TempData["DMFolderName"]' />
                                    <button type="button" id="btnSearch" class="btn btn-block btn-primary"><i class="fa fa-search mr-3"></i>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5>Search Results:</h5>
                    <br />
                    <div class="table-responsive">
                        <table id="tblDrugMaster" class="table table-hover">
                            <tr>
                                <th>Drug Name</th>
                                <th>Drug Code</th>

                                <th class="text-center">Actions</th>
                            </tr>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
@using (Html.BeginForm("BulkUpdate", "DrugMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="uploadBulkDrugMaster" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header d-none">
                    <h5 class="modal-title mt-0" id="uploadBulkDrugMasterLabel">Upload Bulk Drug Master</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-10 mx-auto">
                            <div class="text-right">
                                <a href="~/Masters/DrugMaster.csv" class="btn btn-dark btn-sm" download>
                                    <i class="mdi mdi-download"></i> Download Sample format
                                </a>
                            </div>
                            <div class="fileuploader fileuploader-theme-dragdrop">
                                <input type="file" name="DMCSVFile" id="fileUploadDrugMaster" accept=".csv" />
                                <div class="mt-2">
                                    <i class="fa fa-upload fa-sm btn btn-success btn-block" onclick="csvFileUpload();">
                                        <span>Upload</span>
                                    </i>
                                    <button id="uploadFiles" class="btn btn-primary btn-sm mx-1 hide">Upload File</button>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
}


<script type="text/javascript">


    $(document).ready(function () {

        $("#txtDrugName").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtDrugName').val(), Action: "DrugName" };

                $.ajax({

                    url: "/GroupLifeInsurance/DrugMaster/GetAutocompleteDrugNameCode",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.DrugName,
                                value: item.DrugName
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error!");
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRIMaster").val(i.item.label);
            //    return false;
            //},
        });

        $("#txtDrugCode").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtDrugCode').val(), Action: "DrugCode" };

                $.ajax({
                    url: "/GroupLifeInsurance/DrugMaster/GetAutocompleteDrugNameCode",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.DrugCode,
                                value: item.DrugCode
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error! " + err.Message);
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRICode").val(i.item.label);
            //    return false;
            //},
        });


        $('#btnDrugMas').on('click', function () {
            if ($.trim($("#DrugCode").val()) == "") {
                alert("Please enter DrugCode");
                return false;
            }
            if ($.trim($("#DrugName").val()) == "") {
                alert("Please enter DrugName");
                return false;
            }
            var objDM = new Object();
            objDM.DrugId = $("#hdnDrugId").val();
            objDM.DrugName = $("#DrugName").val();
            objDM.DrugCode = $("#DrugCode").val();
            var param = {
                objDM: objDM, Action: $("#btnDrugMas").val(), DMFolderName: $("#DMFolderName").val()
            };
            $.ajax({
                type: "POST",
                url: "/GroupLifeInsurance/DrugMaster/AddUpdateDrugMaster",
                dataType: "json",
                contentType: 'application/json',
                data: JSON.stringify(param),
                success: function (res) {
                    if (res > 0) {

                    }
                    else if (res == -2) {
                        Swal.fire({
                            icon: 'warning',
                            title: '',
                            text: "Please provide all mandatory fields.",
                        })
                        //alert('Please provide all mandatory fields')
                        return false;
                    }
                    $('#formDrugMaster').reset();
                },
                error: function () {
                    // $("#lblMessage").html('Error while Registring the Company!.');
                    $('#formDrugMaster').reset();
                }
            })
        });
    });

    $('#btnSearch').on('click', function () {
        // var formData = $('#MotorForm').serialize();
        var param = { DrugName: $('#txtDrugName').val(), DrugCode: $('#txtDrugCode').val() };
        $("#tblDrugMaster").find("tr:not(:first)").remove();

        $.ajax({
            type: "GET",
            url: "/GroupLifeInsurance/DrugMaster/GetDrugMaster",
            dataType: "json",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: param,
            success: function (Result) {
                if (Result.length > 0) {
                    var i = 0;
                    $.each(Result, function (key, value) {
                        i++;
                        var hdnID = "hdnobjJSonVal_" + i;
                        var JVal = JSON.stringify(value);
                        $('#tblDrugMaster').append('<tr> <td>' + value.DrugName + '</td>  <td>' + value.DrugName + '</td><td> <a href="' + value.KYCUploadPath + '" class="badge badge-pill badge-warning" download> Download KYC</a></td><td class="text-center"><i class="mdi mdi-pencil text-primary mx-3" onclick="EditDM(' + "'" + hdnID + "'" + ')"></i><i class="mdi mdi-delete text-danger mx-3" onclick="DeActiveDM(this,' + value.DrugId.toString() + ');"></i><input type="hidden" id=' + hdnID + ' value=' + "'" + JVal + "'" + '></td></tr>');
                    })
                }
                else {
                    $('#tblDrugMaster').append('<tr> <td colspan="14" aligen="center" > No Records found </td></tr>');
                }

            },
            error: function () {

            }
        })
    });

    function DeActiveDM(obj, RID) {

        var RIDs = '' + RID;
        var param = { DrugId: RIDs };
        $.ajax({
            type: "POST",
            url: "/GroupLifeInsurance/DrugMaster/DeactivateDrugMaster",
            dataType: "json",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: param,
            success: function (Result) {
                if (Result == "DeActivated") {
                    $(obj).closest('tr').remove();
                    alert("DeActivated successfully");
                    return false;
                }
                else { alert(Result); }
            },
            error: function () {
                console.log('Error while Registring the Company!.');
            }
        })

    }

    function EditDM(JsonObj) {
        $("#anavpills2-2").removeClass("active");
        $("#navpills2-2").removeClass("active");

        $("#anavpills2-1").addClass("active");
        $("#navpills2-1").addClass("active");

        var objRow = JSON.parse($("#" + JsonObj).val());
        $("#DrugName").val(objRow.DrugName);
        $("#DrugCode").val(objRow.DrugCode);

        $("#hdnDrugId").val(objRow.DrugId);

        $("#btnDrugMas").val("Update");

    }

    function csvFileUpload() {
        //fileUploadDrugMasterDMCSVFile
        var rowCount = 0;
        var regex = /^([a-zA-Z0-9\s_\\.\-:])+(.csv|.txt)$/;
        if (regex.test($("#fileUploadDrugMaster").val().toLowerCase())) {

            if (typeof (FileReader) != "undefined") {
                var reader = new FileReader();
                reader.onload = function (e) {

                    var rows = e.target.result.split('\r\n');

                    for (var i = 0; i < rows.length; i++) {

                        var cells = rows[i].split(",");
                        var RRC = rowCount + 1;
                        if (i == 0) {
                            // Heater validation
                            if (cells.length == 2) {

                                if (cells[0] != "DrugName") {
                                    $('#fileUploadDrugMaster').val('');
                                    alert("Please check column name mismatch (DrugName).");
                                    return false;
                                }
                                if (cells[1] != "DrugCode") {
                                    $('#fileUploadDrugMaster').val('');
                                    alert("Please check column name mismatch (DrugCode).");
                                    return false;
                                }

                            }
                            else {
                                $('#fileUploadDrugMaster').val('');
                                alert("Upload Csv file invalid template , Please check .");
                                return false;
                            }

                        } else {
                            // Row validation
                            if (cells.length == 2) {


                                if (cells[0] == "") {
                                    $('#fileUploadDrugMaster').val('');
                                    alert("Please check Row NO : " + RRC + " DrugName  is empty");
                                    return false;
                                }

                                if (cells[1] == "") {
                                    $('#fileUploadDrugMaster').val('');
                                    alert("Please check Row NO : " + RRC + " DrugCode is empty");
                                    return false;
                                }
                            }
                            else {

                                if (cells.length > 1) {
                                    $('#fileUploadDrugMaster').val('');
                                    alert("Please check Row NO : " + RRC + " This row have comma simple or invalied Column length");
                                    return false;
                                }
                            }

                        }

                        rowCount += 1;

                    }

                    if (rowCount == rows.length) {
                        $("#hdnMsgStatus").val('Y');
                        $("#uploadFiles").click();

                    }

                }
                reader.readAsText($("#fileUploadDrugMaster")[0].files[0]);
            } else {
                $('#fileUploadDrugMaster').val('');
                alert("This browser does not support HTML5.");
                return false;
            }
        } else {
            $('#fileUploadDrugMaster').val('');
            alert("Please upload a valid CSV file.");
            return false;
        }
    }

</script>



