<script type="text/javascript">


    $(document).ready(function () {

        $("#txtSeaRIName").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtSeaRIName').val(), Action: "RIName" };

                $.ajax({
                    url: "/GroupLifeInsurance/ReInsurenceMaster/GetAutocompleteRINameRICodeCity",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.ReInsurerName,
                                value: item.ReInsurerName
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error!");
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRIMaster").val(i.item.label);
            //    return false;
            //},
        });

        $("#txtSeaRICode").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtSeaRICode').val(), Action: "RICode" };

                $.ajax({
                    url: "/GroupLifeInsurance/ReInsurenceMaster/GetAutocompleteRINameRICodeCity",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.ReInsurerCode,
                                value: item.ReInsurerCode
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error! " + err.Message);
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRICode").val(i.item.label);
            //    return false;
            //},
        });


        $('#btnSubmitProducerMaster').on('click', function () {

            if ($.trim($("#RIName").val()) == "") {
                alert("Please enter RIName");
                $("#RIName").focus();
                return false;
            }
            if ($.trim($("#ContactName").val()) == "") {
                alert("Please enter ContactName");
                $("#ContactName").focus();
                return false;
            }
            if ($.trim($("#MobileNumber").val()) == "") {
                alert("Please enter MobileNumber");
                $("#MobileNumber").focus();
                return false;
            }
            if ($.trim($("#EmailID").val()) == "") {
                alert("Please enter EmailID");
                $("#EmailID").focus();
                return false;
            }
            if ($.trim($("#TAddress").val()) == "") {
                alert("Please enter Address");
                $("#TAddress").focus();
                return false;
            }
            if ($.trim($("#TCity").val()) == "") {
                alert("Please enter City");
                $("#TCity").focus();
                return false;
            }
            if ($.trim($("#TState").val()) == "") {
                alert("Please enter State");
                $("#TState").focus();
                return false;
            }
            if ($.trim($("#TZipcode").val()) == "") {
                alert("Please enter Zipcode");
                return false;
            }
            if ($.trim($('#BankName :selected').val()) == "") {
                alert("Please select BankName");
                $("#BankName").focus();
                return false;
            }

            if ($.trim($("#AccountNumber").val()) == "") {
                alert("Please enter Account Number");
                $("#AccountNumber").focus();
                return false;
            }
            if ($.trim($("#RepeatAccountNumber").val()) == "") {
                alert("Please enter Repeat Account Number");
                $("#RepeatAccountNumber").focus();
                return false;
            }

            if ($.trim($("#AccountNumber").val()) != "" && $.trim($("#RepeatAccountNumber").val()) != "") {

                if ($.trim($("#AccountNumber").val()) != $.trim($("#RepeatAccountNumber").val())) {
                    $("#RepeatAccountNumber").val("");
                    $("#RepeatAccountNumber").focus();
                    alert("Please check,Account Number is not match");

                    return false;
                }

            }

            if ($.trim($("#IFSCCode").val()) == "") {
                alert("Please enter IFSCCode");
                $("#IFSCCode").focus();
                return false;
            }

            var objRiMaster = new Object();
            objRiMaster.ReInsurerMasterId = $("#hdnRIMasterID").val();
            objRiMaster.ReInsurerName = $("#RIName").val();
            objRiMaster.ContactPerson = $("#ContactName").val();
            objRiMaster.MobileNumber = $("#MobileNumber").val();
            objRiMaster.EmailId = $("#EmailID").val();
            objRiMaster.Address = $("#TAddress").val();
            objRiMaster.City = $("#TCity").val();
            objRiMaster.State = $("#TState").val();
            objRiMaster.Zipcode = $("#TZipcode").val();

            objRiMaster.BankName = $('#BankName :selected').text();
            objRiMaster.BankID = $('#BankName :selected').val();
            objRiMaster.AccountNumber = $("#AccountNumber").val();
            objRiMaster.IFSCCode = $("#IFSCCode").val();

            var param = { objReInsurerMaster: objRiMaster, Action: $("#btnSubmitProducerMaster").val() };
            //var renewalData = $('#formRIMaster').serialize();
            $.ajax({
                type: "POST",
                url: "/GroupLifeInsurance/ReInsurenceMaster/AddUpdateRIMaster",
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: param,
                success: function (res) {
                    if (res > 0) {
                        Swal.fire({
                            icon: 'success',
                            title: '',
                            text: "Data Submitted Successfully.",
                        })
                    }
                    else if (res == -2) {
                        Swal.fire({
                            icon: 'warning',
                            title: '',
                            text: "Please provide all mandatory fields.",
                        })
                        //alert('Please provide all mandatory fields')
                        return false;
                    }
                    $('#formRenewal').reset();
                },
                error: function () {
                    // $("#lblMessage").html('Error while Registring the Company!.');
                    $('#formRIMaster').reset();
                }
            })
        });
    });


    $('#btnSearch').on('click', function () {
        // var formData = $('#MotorForm').serialize();
        var param = { RIName: $('#txtSeaRIName').val(), RICode: $('#txtSeaRICode').val(), City: $('#txtSeaRICity').val() };
        $("#tblRIMaster").find("tr:not(:first)").remove();

        $.ajax({

            type: "GET",
            url: "/GroupLifeInsurance/ReInsurenceMaster/GetRIMaster",
            dataType: "json",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: param,
            success: function (Result) {
                if (Result.length > 0) {
