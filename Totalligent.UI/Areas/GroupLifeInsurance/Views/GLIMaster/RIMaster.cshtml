                    })
                }
                else {
                    $('#tblRIMaster').append('<tr> <td colspan="14" aligen="center" > No Records found </td></tr>');
                }
                //$("#tblRIMaster tr").filter(function () {
                //    $(this).toggle($(this).text().toLowerCase().indexOf(formData) > -1)
                //});

            },
            error: function () {
                // $("#lblMessage").html('Error while Registring the Company!.');
            }
        })
    });

    function DeActiveRIMaster(obj, RID) {

        var RIDs = '' + RID;
        var param = { RiMasterID: RIDs };
        $.ajax({
            type: "POST",
            url: "/GroupLifeInsurance/ReInsurenceMaster/DeactivateRIMaster",
            dataType: "json",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: param,
            success: function (Result) {
                if (Result == "DeActivated") {
                    $(obj).closest('tr').remove();
                    alert("DeActivated successfully");
                    return false;
                }
                else { alert(Result); }



            },
            error: function () {
                console.log('Error while Registring the Company!.');
            }
        })

    }
    function EditRIMaster(JsonObj) {
