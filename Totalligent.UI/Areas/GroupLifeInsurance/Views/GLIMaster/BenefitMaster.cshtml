
@{
    ViewBag.Title = "BenefitMaster";
    Layout = "~/Areas/GroupLifeInsurance/Views/Shared/_Layout.cshtml";
}

<div class="p-t-30">
    <div class="box">
        <div class="box-header with-border">
            <ul class="nav nav-pills justify-content-center mb-0">
                <li class=" nav-item flex-fill text-center"> <a href="#navpills2-1" class="nav-link active" data-toggle="tab" aria-expanded="false"><i class="fa fa-building-o mr-3"></i>Benefits Master</a> </li>
                <li class="nav-item flex-fill text-center"> <a href="#navpills2-2" class="nav-link" data-toggle="tab" aria-expanded="false"><i class="fa fa-search mr-3"></i>Search Benefits Master</a> </li>
            </ul>
        </div>
        <div class="box-body">
            <div class="tab-content">
                <div id="navpills2-1" class="tab-pane active">
                    <form id="formBM">

                        <h4 class="text-center text-success">@TempData["Alertmsg"]</h4>

                        <div class="row">
                            <div class="col-12 col-md-6 offset-md-2">
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 class="col-sm-12 font-weight-bold text-center">Benefits Master Details</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label class="col-form-label text-md-right w-full">Benefits Name</label>
                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBox("BenefitsName", "", new { @class = "form-control w-full", @placeholder = "Enter Benefits Name" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group m-b-15">
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <input type="button" id="btnAddBenefitMaster" value="Create" class="btn btn-rounded btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hdnBenefitsMasterID" value="0">
                    </form>
                </div>
                <div id="navpills2-2" class="tab-pane ">
                    <div class="card no-shadow">
                        <div class="card-body form-horizontal">
                            <div class="row ">
                                <div class="col-md-4">
                                    @Html.TextBox("txtBenefitsName", "", new { @class = "form-control w-full", @placeholder = "Enter Benefit Master Name" })
                                </div>
                                <div class="col-md-4">
                                    @Html.TextBox("txtBenefitsCode", "", new { @class = "form-control w-full", @placeholder = "Enter Benefit Master Unique Code" })
                                </div> 
                                <div class="col-md-4">
                                    <button type="button" id="btnSearch" class="btn btn-block btn-primary"><i class="fa fa-search mr-3"></i>Search</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5>Search Results:</h5>
                    <br />
                    <div class="table-responsive">
                        <table id="tblBM" class="table table-hover">
                            <tr>
                                <th>Benefits Name</th>
                                <th>Benefits Code</th>

                            </tr>
                           <tbody>

                           </tbody>
                           
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <div class="box-footer text-right d-none">
            <button class="btn btn-rounded btn-primary">Submit</button>
            <button class="btn btn-rounded btn-secondary">Cancel</button>
        </div>
    </div>
</div>

<div id="benefitMasterSave" class="d-none modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="benefitMasterSaveLabel">Benefit Master Saved Successfully</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-8 mx-auto">
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label w-full text-center">Benefits Name</label>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label w-full font-weight-bold">Death by natural cause</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label w-full text-center">Unique ID</label>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label w-full font-weight-bold">DNC00125</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <input type="button"  value="Ok" class="btn btn-primary m-20" data-dismiss="modal" aria-label="Close"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script type="text/javascript">


    $(document).ready(function () {

        $("#txtBenefitsName").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtBenefitsName').val(), Action: "BenefitsName" };

                $.ajax({
                    url: "/GroupLifeInsurance/BenefitsMaster/GetAutocompleteBMNameCode",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.BenefitsName,
                                value: item.ReInsurerName
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error!");
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRIMaster").val(i.item.label);
            //    return false;
            //},
        });

        $("#txtBenefitsCode").autocomplete({
            minLength: 2,
            autoFocus: true,
            open: function () { $($('.ui-autocomplete')).css('width', '300px'); },
            source: function (request, response) {
                var param = { prefixText: $('#txtBenefitsCode').val(), Action: "BenefitsCode" };

                $.ajax({
                    url: "/GroupLifeInsurance/BenefitsMaster/GetAutocompleteBMNameCode",
                    data: JSON.stringify(param),
                    dataType: "json",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",

                    success: function (data) {
                        response($.map(data, function (item) {
                            return {
                                label: item.BenefitsCode,
                                value: item.BenefitsCode
                            }
                        }))
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        var err = eval("(" + XMLHttpRequest.responseText + ")");
                        //alert(err.Message)
                        console.log("Ajax Error! " + err.Message);
                    }
                });
            },
            //select: function (e, i) {
            //    $("#txtSeaRICode").val(i.item.label);
            //    return false;
            //},
        });


        $('#btnAddBenefitMaster').on('click', function () {

            if ($.trim($("#BenefitsName").val()) == "") {
                alert("Please enter BenefitsName");
                $("#BenefitsName").focus();
                return false;
            }

            var objBM = new Object();
            objBM.BenefitsMasterId = $("#hdnBenefitsMasterID").val();
            objBM.BenefitsName = $("#BenefitsName").val();
            

            var param = {
                objBM: objBM, Action: $("#btnAddBenefitMaster").val()
            };
          

            $.ajax({
                type: "POST",
                url: "/GroupLifeInsurance/BenefitsMaster/AddUpdateBenefitsMaster",
                dataType: "json",
                contentType: 'application/json',
                data: JSON.stringify(param),
                success: function (res) {
                    if (res > 0) {
                        //Divdropzone.processQueue();
                        //Swal.fire({
                        //    icon: 'success',
                        //    title: '',
                        //    text: "Data Submitted Successfully.",
                        //})
                    }
                    else if (res == -2) {
                        Swal.fire({
                            icon: 'warning',
                            title: '',
                            text: "Please provide all mandatory fields.",
                        })
                        //alert('Please provide all mandatory fields')
                        return false;
                    }
                /*  $('#formBM').reset();*/
                    $('#BenefitsName').val('');
                    
                },
                error: function () {
                    // $("#lblMessage").html('Error while Registring the Company!.');
                /*  $('#formBM').reset();*/
                    $('#BenefitsName').val('');
                }
            })
        });
    });

    $('#btnSearch').on('click', function () {
        // var formData = $('#MotorForm').serialize();
        var param = { BenefitsName: $('#txtBenefitsName').val(), BenefitsCode: $('#txtBenefitsCode').val()};
        $("#tblBM").find("tr:not(:first)").remove();

        $.ajax({

            type: "GET",
            url: "/GroupLifeInsurance/BenefitsMaster/GetBenefits",
            dataType: "json",
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: param,
            success: function (Result) {
                if (Result.length > 0) {
                    var i = 0;
                    $.each(Result, function (key, value) {
                        i++;
                        var hdnID = "hdnobjJSonVal_" + i;
                        var JVal = JSON.stringify(value);
                        $('#tblBM').append('<tr> <td>' + value.BenefitsName + '</td><td>' + value.BenefitsCode + '</td> </tr>');


                    })
                }
                else {
                    $('#tblBM').append('<tr> <td colspan="14" aligen="center" > No Records found </td></tr>');
                }
                
            },
            error: function () {
            }
        })
    });

</script>