<script type="text/javascript">
    $(window).on("load", function () {
        $('#btnSubmitEmployeeMaster').on('click', function () {
            var formData = $('#formEmployee').serialize();
            $.ajax({

                type: "POST",
                url: "/Home/InsertEmployeeMaster",
                dataType: "json",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: formData,
                success: function (res) {
                    //$("#tblMotor tr").filter(function () {
                    //    $(this).toggle($(this).text().toLowerCase().indexOf(formData) > -1)
                    //});
                    if (res > 0)
                        alert('success');
                    else {
                        alert('Record Not Saved.!');
                    }

                },
                error: function () {
                    alert('Error while saving the data.!');
                }
            })
        });
    });
    $('#btnUpload').click(function () {

        // Checking whether FormData is available in browser
        if (window.FormData !== undefined) {

            var fileUpload = $("#fileUploadMotor").get(0);
            var files = fileUpload.files;

            // Create FormData object
            var fileData = new FormData();

            // Looping over all files and add it to FormData object
            for (var i = 0; i < files.length; i++) {
                fileData.append(files[i].name, files[i]);
            }

            // Adding one more key to FormData object
            //  fileData.append('txtMotorMaster', '1');

            $.ajax({
                url: '/Home/UploadFiles',
                type: "POST",
                contentType: false, // Not to set any content header
                processData: false, // Not to process data
                data: fileData,
                success: function (result) {

                    if (result == 1) {
                        alert("File Doesn't belongs to Producer Master");
                        //Swal.fire({
                        //    icon: 'error',
                        //    title: 'Oops...',
                        //    text: "File Doesn't belongs to Motor Policy",
                        //});
                    }
                    else if (result == -3) {
                        alert("File which you trying to upload is incorrect.!");
                        //Swal.fire({
                        //    icon: 'error',
                        //    title: 'Oops...',
                        //    text: "File which you trying to upload is incorrect.!",
                        //});
                    }
                    else if (result == "success") {
                        alert("File Uploaded Successfully!");
                        //Swal.fire({
                        //    icon: 'success',
                        //    title: 'Success!',
                        //    text: "File Uploaded Successfully!",

                        //}).then(
                        //    function () { window.location.href = "ProducerMaster"; });
                    }
                    else if (result == "same") {
                        alert("All the Records already exists. Try uploading new data.");
                        //Swal.fire({
                        //    icon: 'warning',
                        //    title: 'Warning!',
                        //    text: "All the Records already exists. Try uploading new data.",
                        //}).then(
                        //    function () { window.location.href = "ProducerMaster"; });
                    }
                    else {
                        //Swal.fire({
                        //    icon: 'error',
                        //    title: 'Oops...',
                        //    text: err.statusText,
                        //})
                        alert('Error while uploading.');
                    }
                },
                error: function (err) {
                    alert('Error while uploading.');

                    //Swal.fire({
                    //    icon: 'error',
                    //    title: 'Oops...',
                    //    text: err.statusText,
                    //})
                }
            });
        } else {
            Swal.fire({
                icon: 'warning',
                title: 'Oops...',
                text: "FormData is not supported.",
            })
        }
    });
    $('.fileuploader-input').click(function () {
        $("#fileUploadMotor").click();

    });
    $('#clearFiles').click(function () {
        $("#fileContainer").hide();
        $('#fileUploadMotor').val('');
        $("#btnUpload").attr("disabled", "disabled");
    });
    $('#clearFiles').hover(
        function () {
            $('#clearFiles').removeClass("btn-success").addClass("btn-danger");
            $('#clearFiles .fas').removeClass("fa-check").addClass("fa-trash");
        },
        function () {
            $('#clearFiles').removeClass("btn-danger").addClass("btn-success");
            $('#clearFiles .fas').removeClass("fa-trash").addClass("fa-check");
        });
    $('#fileUploadMotor').change(function (e) {
        var fileName = e.target.files[0].name;
        var fileSize = e.target.files[0].size;
        $("#fileContainer").show();
        $("#fileName").html(fileName);
        fileSize = (fileSize / 1024).toFixed(2);
        $("#fileSize").html(fileSize + " KB");
