@model Totalligent.BusinessEntities.InsuranceCompanyMaster
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {

}
@Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <!-- Step wizard -->
        <div class="box box-default">
            <div class="box-header with-border">
                <h4 class="box-title">Insurance Company Master</h4>
                <h6 class="box-subtitle">You can find the <a href="http://www.jquery-steps.com" target="_blank">offical website </a></h6>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div>
                                @using (Html.BeginForm("BulkUpload", "Agent", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <input type="file" name="postedFile" accept=".xls,.xlsx" />
                                    <input type="submit" value="Import" />
                                    <a href="~/Masters/InsuranceCompanyMaster.xlsx" download>Download Sample format</a>
                                }
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.InsurancecompanyName, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.InsurancecompanyName, new { @required = "required", @class = "form-control", placeholder = "Enter an Insurance Company Name" })
                                    @Html.ValidationMessageFor(model => model.InsurancecompanyName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Address, new { @required = "required", @class = "form-control", placeholder = "Enter an Address Name" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.City, new { @required = "required", @class = "form-control", placeholder = "Enter City Name" })
                                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.State, new { @required = "required", @class = "form-control", placeholder = "Enter State Name" })
                                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.Zipcode, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Zipcode, new { @required = "required", @class = "form-control", placeholder = "Enter Zipcode" })
                                    @Html.ValidationMessageFor(model => model.Zipcode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.ContactPerson, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.ContactPerson, new { @required = "required", @class = "form-control", placeholder = "Enter an Insurance Company Name" })
                                    @Html.ValidationMessageFor(model => model.ContactPerson, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.MobileNumber, new { @required = "required", @class = "form-control", placeholder = "Enter Mobile Number" })
                                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row m-b-15">
                                @Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "col-sm-4 col-form-label text-right" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.EmailId, new { @required = "required", @class = "form-control", placeholder = "Enter Email Id", type = "email" })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row m-b-15">
                                <div class="col-md-offset-2 col-md-10 text-center">
                                    <input type="submit" id="btnSaveInsComp" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box -->
    </div>
</div>
<script type="text/javascript">

    $(function () {
        $('#btnSaveInsComp').click(function (e) {
            e.preventDefault();
            var formData = new FormData();
            formData.append("InsurancecompanyName", $("#InsurancecompanyName").val());
            formData.append("Address", $("#Address").val());
            formData.append("City", $("#City").val());
            formData.append("State", $("#State").val());
            formData.append("Zipcode", $("#Zipcode").val());
            formData.append("ContactPerson", $("#ContactPerson").val());
            formData.append("MobileNumber", $("#MobileNumber").val());
            formData.append("EmailId", $("#EmailId").val());
            $.ajax({
                type: "POST",
                url: "/InsuranceCompany/Create",
                data: formData,
                dataType: "json",
                // contentType: 'application/json;charset=utf-8',
                cache: false,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res > 0) {
                        $('#dialogClient').data("kendoDialog").open();
                        $("#lblMessage").html('Insurance Company Registered Successfully.!');
                    }
                    else {
                        $('#dialogClient').data("kendoDialog").open();
                        $("#lblMessage").html('Insurance Company not Registered Successfully.!');
                    }
                },
                error: function () {
                    $("#lblMessage").html('Error while Registring the Insurance Company!.');
                }
            })
        })
    });
</script>
