@model Totalligent.UI.Models.RolesModel
@{
    ViewBag.Title = "NewPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="@Url.Content("~/Content/material-kit.css")" rel="stylesheet" />
}

<div class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('../Content/images/bg7.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-10 ml-auto mr-auto">
                    <div class="card card-login">
                        <div class="form">
                            @using (Html.BeginForm("NewPassword", "Home", FormMethod.Post))
                            {
                                <div class="card-header card-header-primary text-center">
                                    <h4 class="card-title">AMI Company SAOG - Change Password</h4>
                                </div>
                                <div class="card-body  m-t-50">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock</i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(m => m.OldPassword, new { type = "password", oninvalid = "this.setCustomValidity('Enter Old Password')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Enter Temporary Password" })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock</i>
                                            </span>
                                        </div>
                                        @*@Html.PasswordFor(m => m.NewPassword, new { type = "password", oninvalid = "this.setCustomValidity('Enter New Password')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "New Password" })
                                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "error" })*@

                                        @Html.TextBoxFor(m => m.NewPassword, new { type = "password", oninvalid = "this.setCustomValidity('Enter New Password')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "New Password" })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock</i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", oninvalid = "this.setCustomValidity('Confirm Password')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Confirm Password" })
                                        @*<input type="password" class="form-control" placeholder="Password...">*@
                                    </div>
                                </div>
                                <div class="col-12 footer d-flex justify-content-between m-b-20">
                                    <a href="Home/Login" class="btn btn-primary btn-link btn-wd p-l-15">Back to Login</a>
                                    <input class="btn btn-primary btn-round" type="submit" value="Submit" />
                                </div>
                            }
                            @if (ViewBag.ConfirmPasswordMessage != null)
                            {
                                <div>
                                    <label>
                                        @ViewBag.ConfirmPasswordMessage
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
