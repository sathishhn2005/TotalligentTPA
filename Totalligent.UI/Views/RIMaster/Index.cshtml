
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "Broker",
        Value = "Broker"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Agent",
        Value = "Agent"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Direct Sales",
        Value = "Direct Sales"
    });
    listItems.Add(new SelectListItem
    {
        Text = "Branches",
        Value = "Branches",
    }); }
@{ List<SelectListItem> BankList = new List<SelectListItem>();
    BankList.Add(new SelectListItem
    {
        Text = "Axis Bank",
        Value = "AxisBank"
    });
    BankList.Add(new SelectListItem
    {
        Text = "HDFC Bank",
        Value = "HDFC"
    });
    BankList.Add(new SelectListItem
    {
        Text = "Kotak Mahindra Bank",
        Value = "Kotak"
    });
    BankList.Add(new SelectListItem
    {
        Text = "State Bank of India",
        Value = "SIBBank",
    }); }
<div class="p-t-30">
    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title"><strong>RI Master</strong></h4>
        </div>
        <div class="box-body">
            <form id="formProducer">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="col-sm-12 font-weight-bold text-center">RI's Basic Details</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">RI Name</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("MasterType", listItems, "-- Select RI Name --", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Contact Person</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("ContactName", "", new { @class = "form-control w-full", @placeholder = "Enter Contact Person Name" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Mobile Number</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter Mobile Number" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Email ID</label>
                                </div>
                                <div class="col-md-6">
                                    @*@Html.EditorFor(model => model.EmailId, "", new { htmlAttributes = new { @class = "form-control w-full" } })*@
                                    @Html.TextBox("EmailID", "", "", new { @class = "form-control w-full", @placeholder = "Enter Email ID" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Address</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("TAddress", "", new { @class = "form-control w-full", @placeholder = "Enter Address" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">City</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("TCity", "", new { @class = "form-control w-full", @placeholder = "Enter City Name" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">State</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("TState", "", new { @class = "form-control w-full", @placeholder = "Enter State Name" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Zipcode</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("TZipcode", "", new { @class = "form-control w-full", @placeholder = "Enter Zipcode" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-12 col-md-10">
                                    <h4 class="col-sm-12 font-weight-bold text-center">RI's Account Details</h4>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label for="BankName" class="col-form-label text-md-right w-full">Bank Name</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.DropDownList("BankName", BankList, "-- Select Bank --", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Account Number</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter Account Number" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Repeat Account Number</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter Account Number" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">IFSC Code</label>
                                </div>
                                <div class="col-md-6">
                                    @Html.TextBox("MobileNumber", "", new { @class = "form-control w-full", @placeholder = "Enter IFSC Code" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-b-15">
                            <div class="row">
                                <div class="col-md-5">
                                    <label class="col-form-label text-md-right w-full">Upload KYC</label>
                                </div>
                                <div class="col-md-6">
                                    <div class=" dropzone" action="/file-upload">
                                        <div id="tabs-3">
                                            <div class="row field ">
                                                <div id="dropzoneWrapper" class="dz-default dz-message col-12">
                                                    <i class="mdi mdi-cloud-upload font-size-30 text-muted"></i>
                                                    <h5>Drop files here or click to Upload</h5>
                                                    <div id="dropZoneContainer">

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group m-b-15">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <input type="submit" id="btnSubmitProducerMaster" value="Create" class="btn btn-primary m-20" />
                            <button class="btn btn-primary-login m-20" type="button" data-toggle="modal" data-target="#uploadBulk">
                                <i class="mdi mdi-cloud-upload"></i> Bulk Upload Policy
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="box-footer text-right">
            <button class="btn btn-rounded btn-primary">Submit</button>
            <button class="btn btn-rounded btn-secondary">Cancel</button>
        </div>
    </div>
</div>

<div id="uploadBulk" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="uploadBulkLabel">Upload Bulk Policies</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-10 mx-auto">
                        <div class="text-right">

                            <a href="~/Masters/ProducerMaster.xlsx" class="btn btn-dark btn-sm" download>
                                <i class="mdi mdi-download"></i> Download Sample format
                            </a>
                        </div>
