@model Totalligent.UI.Models.RolesModel
@using Totalligent.BAL
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="@Url.Content("~/Content/material-kit.css")" rel="stylesheet" />
}
<div class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('../Content/images/bg7.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-10 ml-auto mr-auto">
                    <div class="card card-login">
                        <div class="form">
                            @using (Html.BeginForm("Login", "Home", FormMethod.Get))
                            {
                                <div class="card-header card-header-primary text-center">
                                    <h4 class="card-title">VIDAL HEALTH TPA - LOGIN</h4>
                                </div>
                                <div class="card-body  m-t-50">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">supervisor_account</i>
                                            </span>
                                        </div>
                                        @Html.DropDownListFor(m => m.Role, new SelectList((new TotalligentBALayer()).GetRoles(), "RoleId", "Description", 0), new { @id = "RoleId", @class = "form-control" })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">mail</i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(m => m.LoginUser.UserName, new { oninvalid = "this.setCustomValidity('Please enter Username')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Username..." })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        @Html.PasswordFor(m => m.LoginUser.Password, new { oninvalid = "this.setCustomValidity('Enter Password:xxxxxxx')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Password" })
                                        @*<input type="password" class="form-control" placeholder="Password...">*@
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end m-b-10">
                                    <a href="#pablo" class="btn btn-primary btn-link btn-wd p-r-10">Forgot Password?</a>
                                </div>
                                <div class="col-12 d-flex justify-content-between m-b-20">
                                    @*<button class="btn btn-primary btn-round">Register User</button>*@
                                    <a href="/Home/Registration" class="btn btn-primary btn-link btn-wd p-l-15">Register New User</a>
                                    <button class="btn btn-primary btn-round">Login</button>
                                </div>
                            }
                            @if (ViewBag.Message != null)
                            {
                                <div>
                                    <label>
                                        @ViewBag.Message
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
