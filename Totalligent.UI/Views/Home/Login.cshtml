@model Totalligent.UI.Models.RolesModel
@using Totalligent.BAL
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="@Url.Content("~/Content/material-kit.css")" rel="stylesheet" />
}
<div class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('../Content/images/bg7.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-10 ml-auto mr-auto">
                    <div class="card card-login">
                        <div class="form">
                            @using (Html.BeginForm("Login", "Home", FormMethod.Get))
                            {
                                <div class="card-header card-header-primary text-center">
                                    <h4 class="card-title">WELCOME TO MEDICAL INSURANCE MANAGEMENT SYSTEM</h4>
                                </div>
                                <div class="card-body  m-t-50">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">supervisor_account</i>
                                            </span>
                                        </div>
                                        @Html.DropDownListFor(m => m.Role, new SelectList((new TotalligentBALayer()).GetRoles(), "RoleId", "Description", 0), new { @id = "RoleId", @class = "form-control" })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">mail</i>
                                            </span>
                                        </div>
                                        @Html.TextBoxFor(m => m.LoginUser.UserName, new { oninvalid = "this.setCustomValidity('Please enter Username')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Username..." })
                                        @*<input type="email" class="form-control" placeholder="Email...">*@
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        @Html.PasswordFor(m => m.LoginUser.Password, new { oninvalid = "this.setCustomValidity('Enter Password:xxxxxxx')", oninput = "setCustomValidity('')", @required = "required", @class = "form-control", placeholder = "Password" })
                                        @*<input type="password" class="form-control" placeholder="Password...">*@
                                    </div>

                                </div>
                                <div class="col-12 d-flex justify-content-end m-b-10">
                                    <a id="divfrgtPswd" href="#pablo" class="btn btn-primary btn-link btn-wd p-r-10">Forgot Password?</a>
                                </div>
                                <div class="col-12 d-flex justify-content-between m-b-20">
                                    @*<button class="btn btn-primary btn-round">Register User</button>*@

                                    <a id="divRegister" href="/Home/Registration" class="btn btn-primary btn-link btn-wd p-l-15">Register New User</a>

                                    <button class="btn btn-primary btn-round">Login</button>
                                    @*<button id="btnReset" class="btn btn-primary btn-round">Reset Password?</button>*@
                                    <button type="button" class="btn btn-primary btn-round" data-toggle="modal"
                                            data-target="#resetModal">
                                        Reset Password?
                                    </button>

                                </div>
                            }
                            @if (ViewBag.Message != null)
                            {
                                <div>
                                    <label class="errorID">
                                        @ViewBag.Message
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="resetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Password Reset</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">

                        <input type="text" required placeholder="Enter UserName" class="form-control" id="txtUserName">
                    </div>
                    <label id="lblMessage"></label>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnResetPassword" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
