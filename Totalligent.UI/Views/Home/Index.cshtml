@model Totalligent.UI.Models.AdminModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="@Url.Content("~/Content/material-dashboard.css")" rel="stylesheet" />
}
<div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white" data-image="../Content/images/bg7.jpg">
        <!--
            Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

            Tip 2: you can also add an image using data-image tag
        -->
        <div class="logo">
            @if (ViewBag.RoleId == 1 || ViewBag.RoleId == 2)
            {
                <a href="#" class="simple-text logo-normal">

                    VIDAL HEALTH CARE
                </a>
            }
            </div>
        <div class="logo text-center">
            @if (ViewBag.UserName != null)
            {
                <label>@ViewBag.UserName<br /> @DateTime.Now.ToShortDateString()</label>

            }
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item active">
                    <a class="nav-link" id="anchorRegister" href="#">
                        <i class="material-icons">dashboard</i>
                        <p>Dashboard</p>
                    </a>
                </li>
                @if (ViewBag.RoleId == 1)
                {
                    <li class="nav-item">
                        <a class="nav-link" id="EmpRegister" href="#">
                            <i class="material-icons">person</i>
                            <p>Register New User</p>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <a class="navbar-brand" href="#pablo">Dashboard</a>
                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                    <span class="navbar-toggler-icon icon-bar"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end">
                    <form class="navbar-form">
                        <div class="input-group no-border">
                            <input type="text" value="" class="form-control" placeholder="Search...">
                            <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                <i class="material-icons">search</i>
                                <div class="ripple-container"></div>
                            </button>
                        </div>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#pablo">
                                <i class="material-icons">dashboard</i>
                                <p class="d-lg-none d-md-block">
                                    Stats
                                </p>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">notifications</i>
                                <span class="notification">5</span>
                                <p class="d-lg-none d-md-block">
                                    Some Actions
                                </p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Mike John responded to your email</a>
                                <a class="dropdown-item" href="#">You have 5 new tasks</a>
                                <a class="dropdown-item" href="#">You're now friend with Andrew</a>
                                <a class="dropdown-item" href="#">Another Notification</a>
                                <a class="dropdown-item" href="#">Another One</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#pablo" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">person</i>
                                <p class="d-lg-none d-md-block">
                                    Account
                                </p>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                <a class="dropdown-item" href="#">Profile</a>
                                <a class="dropdown-item" href="#">Settings</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Home/Login">Log out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        <div class="content" id="divMainContent">
            <div class="container-fluid">
                <div class="row hide">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Register a New Employee</h4>
                                <p class="card-category">Registration of Client Profile</p>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Client Company ID</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Address</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">City</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Country</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Postal Code</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Currency</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Contact Person</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Mobile Number</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Email ID</label>
                                                <input type="email" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Broker</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Commission</label>
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="bmd-label-floating">Re Insurer</label>
                                                <input type="email" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary pull-right">Proceed to Client Policy Quotation and Details <i class="m-l-5 material-icons">arrow_forward</i></button>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card card-profile">
                            <div class="card-avatar">
                                <a href="#pablo">
                                    <img class="img" src="~/Content/images/marc.jpg" />
                                </a>
                            </div>
                            <div class="card-body">
                                <h6 class="card-category text-gray">AMI SAOG ADMIN</h6>
                                <h4 class="card-title">Alec Thompson</h4>
                                <p class="card-description">
                                    Don't be scared of the truth because we need to restart the human foundation in truth And I love you like Kanye loves Kanye I love Rick Owens’ bed design but the back is...
                                </p>
                                <a href="#pablo" class="btn btn-primary btn-round">Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="card card-nav-tabs">
                        <div class="card-header card-header-primary">
                            <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#profile" data-toggle="tab">
                                                <i class="material-icons">face</i> Profile
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#MasterData" data-toggle="tab">
                                                <i class="material-icons">cloud_upload</i> Master Data Upload
                                            </a>
                                        </li>
                                        @if (ViewBag.RoleId == 3)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="#RegisterClient" data-toggle="tab">
                                                    <i class="material-icons">person_add</i> Register New Client
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#ViewClient" data-toggle="tab">
                                                    <i class="material-icons">search</i> View Existing Client
                                                </a>
                                            </li>
                                        }
                                        @if (ViewBag.RoleId == 1 || ViewBag.RoleId == 2)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="#RegisterInsCompany" data-toggle="tab">
                                                    <i class="material-icons">person_add</i> Register New Insurance Company
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#ViewInsCompany" data-toggle="tab">
                                                    <i class="material-icons">search</i> View Existing Insurance Company
                                                </a>
                                            </li>
                                        }
                                        @if (ViewBag.RoleId == 1)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="#RaiseTicket" data-toggle="tab">
                                                    <i class="material-icons">error</i> Raise a Ticket
                                                </a>
                                            </li>
                                        }
                                        @if (ViewBag.RoleId == 2)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="#" data-toggle="tab">
                                                    <i class="material-icons">error</i> View Ticket
                                                </a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-body ">
                            <div class="tab-content text-center">
                                <div class="tab-pane active" id="profile">
                                    @Html.Partial("_Profile", TempData["Data"])
                                </div>
                                <div class="tab-pane" id="MasterData">
                                    <div class="row m-b-15">
                                        <div class="col-md-4">
                                            <label for="inputName" class="col-sm-12 col-form-label text-right">Client Company Master</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="demo-section k-content">
                                                @(Html.Kendo().Upload().Name("Clientfiles").HtmlAttributes(new { aria_label = "files" })
                                                )
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-b-15">
                                        <div class="col-md-4">
                                            <label for="inputName" class="col-sm-12 col-form-label text-right">Broker Master</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="demo-section k-content">
                                                @(Html.Kendo().Upload()
                                                                                                                                                                                                                                            .Name("Brokerfiles")
                                                                                                                                                                                                                                            .HtmlAttributes(new { aria_label = "files" })
                                                )
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-b-15">
                                        <div class="col-md-4">
                                            <label for="inputName" class="col-sm-12 col-form-label text-right">Agent Master</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="demo-section k-content">
                                                @(Html.Kendo().Upload()
                                                                                                                                                                                                                                    .Name("Agentfiles")
                                                                                                                                                                                                                                    .HtmlAttributes(new { aria_label = "files" })
                                                )
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-b-15">
                                        <div class="col-md-4">
                                            <label for="inputName" class="col-sm-12 col-form-label text-right">Network Master</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="demo-section k-content">
                                                @(Html.Kendo().Upload()
                                                                                                                                                                                                                            .Name("Networkfiles")
                                                                                                                                                                                                                            .HtmlAttributes(new { aria_label = "files" })
                                                )
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-b-15">
                                        <div class="col-md-4">
                                            <label for="inputName" class="col-sm-12 col-form-label text-right">Category Master</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="demo-section k-content">
                                                @(Html.Kendo().Upload()
                                                                                                                                                                                                                    .Name("Categoryfiles")
                                                                                                                                                                                                                    .HtmlAttributes(new { aria_label = "files" })
                                                )
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="RegisterClient">
                                    @Html.Partial("_ClientRegistration")
                                </div>
                                <div class="tab-pane" id="ViewClient">
                                    @Html.Partial("_ViewClients");
                                </div>

                                <div class="tab-pane" id="RegisterInsCompany">
                                    @Html.Partial("_RegisterInsCompany")
                                </div>
                                <div class="tab-pane" id="ViewInsCompany">
                                    @Html.Partial("_ViewInsCompany");
                                </div>

                                @if (ViewBag.RoleId == 1)
                                {
                                    <div class="tab-pane" id="RaiseTicket">
                                        @Html.Partial("_RaiseTicket");
                                    </div>
                                }

                                @if (ViewBag.RoleId == 2)
                                {
                                    <div class="tab-pane" id="ViewTicket">
                                        @Html.Partial("_ViewTicket");
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- End Tabs with icons on Card -->
                </div>
            </div>
        </div>
        @if (ViewBag.RoleId == 1)
        {
            <div class="content" id="divEmpRegister">
                <div class="container-fluid">
                    @Html.Partial("_EmployeeRegister");
                </div>
            </div>
        }
        <footer class="footer">
            <div class="container-fluid">
                <nav class="float-left">
                    <ul>
                        <li>
                            <a href="https://www.totalligent.com">
                                Totalligent
                            </a>
                        </li>
                        <li>
                            <a href="http://totalligent.com/about-us.html">
                                About Us
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Services
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright float-right">
                    &copy;
                    <script>
                        document.write(new Date().getFullYear())
                    </script>, made with <i class="material-icons">favorite</i> by
                    <a href="https://www.totalligent.com" target="_blank">Totalligent</a> for a better web.
                </div>
            </div>
        </footer>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#divEmpRegister").css("display", "none");
        $("#EmpRegister").click(function () {
            $("#divMainContent").css("display", "none");
            $("#divEmpRegister").css("display", "block");


            //$("#divMainContent").hide();
            //$("#divEmpRegister").show();
        });
        $("#anchorRegister").click(function () {
            $("#divEmpRegister").css("display", "none");
            $("#divMainContent").css("display", "block");
            //$("#divEmpRegister").show();
            //$("#divMainContent").hide();
        });
    });
    $('.sidebar-wrapper li > a').click(function () {
        $('.sidebar-wrapper li').removeClass('active');
        $(this).parent().addClass('nav-item active');
    });
</script>