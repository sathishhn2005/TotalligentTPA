
@model IEnumerable<Totalligent.BusinessEntities.Register>

<div>
    <div class="row m-b-15">
        <div class="col-md-4">
            <label class="col-sm-12 col-form-label text-right">Company Draft Number</label>
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" id="txtPolicyNumberCom" placeholder="Policy Number" />
        </div>
        <div class="col-md-2 text-left">
            <button type="submit" id="btnViewCompanies" class="btn btn-primary btn-fab btn-round btn-sm ">
                <i class="material-icons">search</i>
            </button>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div id="gridCompany"></div>

        </div>
    </div>
</div>
<script type="text/x-kendo-template" id="template">
    <div id="details-container">
        <div class="card-login">
            <div class="form">
                <div class="input-group m-t-15">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">mail</i>
                        </span>
                    </div>
                    <input type="email" class="form-control" placeholder="Email...">
                </div>
                <div class="input-group m-t-25 m-b-25">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="material-icons">lock_outline</i>
                        </span>
                    </div>
                    <input type="password" class="form-control" placeholder="Password...">
                </div>
                <div class="col-12 d-flex justify-content-between">
                    <button class="btn btn-default btn-round">Cancel</button>
                    <button class="btn btn-primary btn-round">Submit</button>
                </div>
            </div>
        </div>
    </div>
</script>
<script type="text/javascript">
    var detailsTemplate = kendo.template($("#template").html());

    function showDetails(e) {
        e.preventDefault();

        var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        var wnd = $("#Details").data("kendoWindow");

        wnd.content(detailsTemplate(dataItem));
        wnd.center().open();
    }
</script>
<script type="text/javascript">

    $(function () {
        $('#btnViewCompanies').click(function (e) {
            e.preventDefault();
            var PolicyNumber = $('#txtPolicyNumberCom').val();
            $.ajax({
                type: "GET",
                url: "/Admin/GetCompany",
                data: { "PolicyNumber": PolicyNumber },
                dataType: "",
                contentType: 'application/json;charset=utf-8',
                success: function (res) {

                    if (res.length > 0) {
                        console.log(res);
                        $("#gridCompany").kendoGrid({
                            dataSource: {
                                data: res,
                                schema: {
                                    model: {
                                        fields: {
                                            PolicyNumber: { type: "string" },
                                            //UnitPrice: { type: "number" },
                                            // UnitsInStock: { type: "number" },
                                            //Discontinued: { type: "boolean" }
                                        }
                                    }
                                },
                                pageSize: 5
                            },
                            scrollable: true,
                            sortable: true,
                            filterable: false,
                            pageable: {
                                input: true,
                                numeric: false
                            },

                            columns: [
                                {
                                    field: "PolicyNumber",
                                    title: "Policy Number"
                                },
                                {
                                    field: "CompanyName",
                                    title: "Company Name"
                                }
                                ,
                                {
                                    field: "Address",
                                    title: "Address"
                                }
                                //,
                                //{
                                //    field: "City",
                                //    title: "City"
                                //}
                                ,
                                {
                                    field: "ContactPerson",
                                    title: "Contact Person"
                                }
                                ,
                                //{
                                //    field: "MobileNumber",
                                //    title: "Mobile Number"
                                //}
                                //,
                                //{
                                //    field: "EmailId",
                                //    title: "Email Id"
                                //},
                                {
                                    field: "Currency",
                                    title: "Currency"
                                }
                                ,
                                {
                                    field: "Broker",
                                    title: "Broker"
                                }
                                ,
                                {
                                    field: "Reinsurer",
                                    title: "Reinsurer"
                                }
                            ]
                        });
                    }
                    else {
                        $("#lblMessage").html('Client is not Registered Successfully.!');
                    }
                },
                error: function () {
                    $("#lblMessage").html('Error while Registring the Client!.');
                }
            })
        })
    });
</script>
